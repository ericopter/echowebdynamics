/*
*	Default Color Theme
*/

/*
	General Fonts and Links
*/
h1, h2, h3, h4, h5, h6 {
	color : #2A63A6;
}

a, a:visited {
	color : #2A63A6;
}

a:hover {
	color : #A6A6A6;
}

/* 
	Header Area Navigation Meny
*/
#header-nav > li:hover > a {
	background : rgba(255, 255, 255, 0.8);
	color : #A6A6A6;
}

#header-nav .sub-menu {
	background : rgba(255, 255, 255, 0.8);
}

/* 
	Primary Navigation Bar
*/
#primary-nav {
	background-color : #D8D8D8;
/*	background-image : -moz-linear-gradient(center top , #E7E7E7, #C9C9C9);*/
	border-top : 1px solid #FFF;
	border-bottom : 1px solid #CCC;
}

#nav-bar li a {
	color: #9B9B9B;
}

#nav-bar li:hover > a {
	background-color : #C9C9C9;
/*	background-image : -moz-linear-gradient(center top , #D6D6D6, #BABABA);*/
	color : #fff;
}

/* Primary Navigation Bar Sub Menus */
#nav-bar .sub-menu {
	background-color : #C9C9C9;
/*	background-image : -moz-linear-gradient(center top , #BABABA, #929292);*/
}

#nav-bar .sub-menu > li > a {
	color : #fff;
}

#nav-bar .sub-menu > li:hover > a {
	background-color : #D8D8D8;
/*	background-image : -moz-linear-gradient(center top , #D6D6D6, #BABABA);*/
	color : #fff;
}

/*
	Footer 
*/
#footer {
	border-top : 5px solid #9E9E9E;
}

#sub-footer {
	background : #9E9E9E;
}

#footer-nav li a {
	color : #F9F9F9;
}

#footer-nav li a:hover {
	color : #828282;
}

/*
	Buttons and Links
*/
#nav-single a {
	background : #eee;
	border : 1px solid #ddd;
	color : #aaa;
}

#nav-single a:hover {
	background : #aaa;
	border : 1px solid #999;
	color : #fff;
}

#nav-above,
#nav-below {
	border : 1px solid #ddd;
}

.content-nav a {
	background : #eee;
	border : 1px solid #ddd;
	color : #aaa;
}

.content-nav a:hover {
	background : #aaa;
	border : 1px solid #999;
	color : #fff;
}

.button-link {
	background : #eee;
	border : 1px solid #ddd;
	color : #aaa;
}

.button-link:hover {
	background : #aaa;
	border : 1px solid #999;
	color : #fff;
}

/*
	Images {frame}
*/
.image-frame img,
img.image-frame {
	border : 1px solid #ddd;
	box-shadow : -2px 2px 4px #ccc;
}

.image-frame img:hover,
img.image-frame:hover {
	box-shadow : -1px 1px 2px #aaa;
}

/*
	Pages and Categories
*/
.page-title,
.page-title a {
	color : #666;
}

.page-title a:hover {
	color : #A6A6A6;
}

.sub-title {
	color : #999;
}

/*
	Entries
*/
.hentry,
.no-results {
	border-bottom : 1px solid #ddd;
}

.entry-title, 
.entry-title a {
	color : #2A63A6;
}

.entry-title a:hover {
	color : #A6A6A6;
}

/* Entry Meta */
.edit-link a {
	background : #eee;
	border : 1px solid #ddd;
	color : #aaa;
}

.edit-link a:hover {
	background : #aaa;
	border : 1px solid #999;
	color : #fff;
}

/* Comments Links */
header .comments-link a {
	background : #eee;
	border : 1px solid #ddd;
	color : #aaa;
}

header .comments-link a:hover {
	background : #aaa;
	border : 1px solid #999;
	color : #fff;
}

/* 
	Sticky/Featured Posts 
*/
#featured-posts .sticky:first-child {
	border-top : 1px solid #ddd;
}

h3.entry-format {
	color : #666;
}

/*
	Contact Page Template
*/
#contact-thanks {
	background : #F4F108;
	border : 1px solid #C7C7C7;
}

#contact-thanks h1 {
	color : #2A63A6;
}

/*
	Comments
*/
#comments-title {
	border-bottom : 1px solid #ccc;
}

.commentlist > li.comment {
	background : #fcfcff;
	border : 1px solid #ddd;
}

.comment-meta {
	color : #666;
}

.commentlist .avatar {
	box-shadow : 0 1px 2px #ccc;
}

a.comment-reply-link {
	background : #eee;
	color : #aaa;
}

a.comment-reply-link:hover {
	background : #aaa;
	color : #fff;
}

/*
	Forms
*/
label {
	color : #666;
}

required {
	color : #BD3500;
}

input[type="text"], 
textarea {
	border : 1px solid #ccc;	
	box-shadow : 0 2px 2px #eee;
	color : #888;
}

input[type="text"]:focus, 
textarea:focus {
	background : #fcfcff;
	border-color : #aaa;
}

input[type=submit] {
	box-shadow : 0 1px 2px rgba(0, 0, 0, 0.3);
}

/*
	Sidebars and Widgets
*/
#sidebar .widget {
	background : #fafafa;
	border : 1px solid #ccc;
	color : #aaa;
}

.footerBox h3 {
	color : #888;
}

#wp-calendar td a {
	background : #eee;
}

/*
	Message Boxes
*/
.box.blockquote {
	border-left : 1px solid #7C7C7C;
}

.box.message {
	background : #F3F3F3;
	border : 1px solid #E1E1E1;
}

.box.alert {
	border : 1px solid #D7D7D7;
	color : #DC2904;
}

/*
	Flexslider
*/
.flexslider {}
	
.flex-control-paging li a {
	background: #666;
	background: rgba(0,0,0,0.5);
	box-shadow: inset 0 0 3px rgba(0,0,0,0.3);
}

.flex-control-paging li a:hover {
	background: #e1e1e1;
	background: rgba(225,225,225,0.9);
}

.flex-control-paging li a.flex-active {
	background: #e1e1e1;
	background: rgba(225,225,225,0.9);
}

/* Homepage Slideshow */
#home-slideshow {
	background : url('../images/content-bg.png') repeat;
	box-shadow : 0 8px 4px -2px #DDDDDD;
}

/* Homepage Slideshow Text */
.slide-content-container header {
	background : rgba(200, 200, 200, 0.6);
	border : 1px solid rgba(150, 150, 150, .6);
	color : #3E3E3E !important;
}

.slide-content-container header h1 {
	color : #3E3E3E;
}

.slide-content-container header:hover,
.slide-content-container header:hover h1,
.slide-content-container header:hover div {
	background : rgb(255, 255, 255);
	color : #2A63A6;
}

/* Gallery Slideshow */
.gallery-slideshow .flexslider {
	border : 3px solid #ccc;
}